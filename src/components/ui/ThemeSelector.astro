<div class='dropdown dropdown-end z-50'>
  <button tabindex='0' class='btn btn-ghost btn-square size-10 rounded-lg'>
    <!-- Sun icon for light theme -->
    <svg
      xmlns='http://www.w3.org/2000/svg'
      viewBox='0 0 24 24'
      class='size-6 stroke-current hidden'
      stroke-width='1.75'
      fill='none'
      data-theme-condition='light'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z'
      ></path>
    </svg>

    <!-- Moon icon for dark theme -->
    <svg
      xmlns='http://www.w3.org/2000/svg'
      viewBox='0 0 24 24'
      class='size-6 stroke-current hidden'
      stroke-width='1.75'
      fill='none'
      data-theme-condition='dark'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M21.752 15.002A9.72 9.72 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z'
      ></path>
    </svg>
  </button>

  <div
    class='dropdown-content bg-base-200 text-base-content rounded-box mt-2 shadow-lg p-2 w-36'
  >
    <button
      class='flex items-center gap-3 w-full px-3 py-2 rounded-md hover:bg-base-300 transition-colors'
      data-set-theme='light'
      data-act-class='font-semibold'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-4 w-4'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
        stroke-width='2'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z'
        ></path>
      </svg>
      <span>Light</span>
    </button>

    <button
      class='flex items-center gap-3 w-full px-3 py-2 rounded-md hover:bg-base-300 transition-colors'
      data-set-theme='dark'
      data-act-class='font-semibold'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-4 w-4'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
        stroke-width='2'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z'
        ></path>
      </svg>
      <span>Dark</span>
    </button>
  </div>
</div>

<script>
  // Handle theme-dependent icon visibility
  function updateThemeIcons() {
    const currentTheme =
      document.documentElement.getAttribute('data-theme') || 'light';

    // Get all theme condition elements
    document.querySelectorAll('[data-theme-condition]').forEach((el) => {
      const condition = el.getAttribute('data-theme-condition');

      // Show/hide based on theme
      if (condition === currentTheme) {
        el.classList.remove('hidden');
      } else {
        el.classList.add('hidden');
      }
    });
  }

  // Initial update
  updateThemeIcons();

  // Update on theme change
  document.addEventListener('themeChange', updateThemeIcons);

  // Update after navigation with Astro View Transitions
  document.addEventListener('astro:after-swap', updateThemeIcons);
</script>
