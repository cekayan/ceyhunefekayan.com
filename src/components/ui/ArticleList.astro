---
interface Props {
  listTitle: string;
  listItems: {
    title: string;
    journal: string;
    time: string;
    link?: string;
  }[];
}
const { listTitle, listItems } = Astro.props;
---

<h2 class='text-3xl font-bold mb-6'>Recent Publications</h2>
<div class='space-y-4'>
  {
    listItems.map((item) => (
      <div class='p-4 rounded-lg text-base-content bg-base-200 shadow-sm hover:shadow-md transition-shadow duration-200'>
        <div class='flex flex-col md:flex-row md:items-center md:justify-between gap-2'>
          <div>
            <h3 class='text-lg font-bold mb-1'>
              {item.link ? (
                <a href={item.link} class='hover:text-accent'>
                  {item.title}
                </a>
              ) : (
                item.title
              )}
            </h3>
            <p class='text-xs opacity-75'>
              <span class='italic'>{item.journal}</span> â€¢ {item.time}
            </p>
          </div>
          {item.link && (
            <a
              href={item.link}
              class='btn btn-xs btn-secondary text-secondary-content self-end'
            >
              Read Paper
            </a>
          )}
        </div>
      </div>
    ))
  }
</div>
