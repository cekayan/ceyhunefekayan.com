---
import Layout from "./layout.astro";
import siteData from "../data/site.json";

interface Props {
  title: string;
}

const { title } = Astro.props;
const { profile } = siteData;
---

<Layout title={title}>
  <main class="layout">
    <!-- Left Column -->
    <div class="left-column">
      <section class="profile-section">
        <a href="/" class="logo-link">
          <img src={profile.avatar} alt="Profile" class="avatar" />
          <h1 class="logo">{profile.name}</h1>
        </a>

        <div class="bio">
          {
            profile.bio.map((item) => (
              <p>
                <span class="icon">{item.icon}</span> {item.text}
              </p>
            ))
          }
        </div>

        <div class="social-links">
          {
            profile.socials.map((social) => (
              <a href={social.url} class="social-link">
                <span class="icon">{social.icon}</span> {social.name}
              </a>
            ))
          }
        </div>
      </section>
    </div>

    <!-- Right Column -->
    <div class="right-column">
      <slot />
    </div>
  </main>
</Layout>

<style>
  .layout {
    display: grid;
    grid-template-columns: 35% 70%;
    gap: calc(2 * var(--spacing-unit));
    max-width: calc(100vw - 60px);
    margin: 0 auto;
    padding: calc(2 * var(--spacing-unit));
  }

  .left-column {
    position: sticky;
    top: calc(2 * var(--spacing-unit));
    height: fit-content;
  }

  .right-column {
    min-width: 0;
  }

  .profile-section {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    padding: calc(2 * var(--spacing-unit));
  }

  .logo-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    margin-bottom: calc(1.5 * var(--spacing-unit));
    transition: opacity 0.2s;
  }

  .logo-link:hover {
    opacity: 0.8;
    text-decoration: none;
  }

  .avatar {
    width: calc(140px * var(--base-font-size) / 16);
    height: calc(140px * var(--base-font-size) / 16);
    border-radius: 10%;
    margin-bottom: var(--spacing-unit);
  }

  .logo {
    font-size: calc(2.5 * var(--base-font-size));
    margin: 0;
    color: #fff;
  }

  .bio {
    color: #eee;
    font-size: calc(0.9 * var(--base-font-size));
    margin-bottom: calc(2 * var(--spacing-unit));
  }

  .bio p {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin: calc(0.5 * var(--spacing-unit)) 0;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: calc(0.8 * var(--spacing-unit));
    padding-top: calc(1.5 * var(--spacing-unit));
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .social-link {
    color: #fff;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: calc(0.5 * var(--spacing-unit));
    padding: calc(0.5 * var(--spacing-unit));
    border-radius: 4px;
    transition: background-color 0.2s;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.1);
    text-decoration: none;
  }

  .icon {
    font-size: calc(1.2 * var(--base-font-size));
  }

  .bio .bullet-item {
    display: flex;
    align-items: center;
    text-align: left;
    justify-content: center;
  }

  .bio .icon {
    font-size: calc(1.2 * var(--base-font-size));
    margin: 0 calc(0.4 * var(--spacing-unit));
  }

  @media (max-width: 768px) {
    .layout {
      grid-template-columns: 1fr;
      padding: var(--spacing-unit);
    }

    .left-column {
      position: static;
    }

    .logo {
      font-size: calc(2 * var(--base-font-size));
    }
  }
</style>
